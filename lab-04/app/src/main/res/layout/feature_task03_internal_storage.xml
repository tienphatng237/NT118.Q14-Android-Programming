<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".task03.screens.Task03InternalStorageActivity">

    <TextView
        android:id="@+id/tv_internal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demo: Internal Storage - Ghi chú cá nhân"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/et_internal_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập dữ liệu vào đây"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top|start"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:padding="12dp"
        android:background="@color/backgroundLight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_internal_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_internal_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginEnd="8dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_internal_notes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"/>

    <Button
        android:id="@+id/btn_internal_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay lại Menu"
        android:backgroundTint="@color/gray_500"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>

</LinearLayout>