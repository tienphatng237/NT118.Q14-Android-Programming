<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".task03.ui.external.Task03ExternalStorageFragment">

    <TextView
        android:id="@+id/tv_external_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demo: External Storage"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/et_external_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập dữ liệu để lưu (tệp văn bản)"
        android:inputType="text"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:padding="12dp"
        android:background="@color/backgroundLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_external_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_external_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đọc Dữ Liệu"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_external_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp"
        android:text="Không có dữ liệu trong file external.txt"
        android:textSize="16sp"
        android:padding="12dp"
        android:textColor="@color/textPrimary"
        android:background="@color/backgroundLight"
        android:minLines="5"
        android:gravity="top|start"
        android:elevation="0dp"/>

    <Button
        android:id="@+id/btn_internal_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay lại Menu"
        android:backgroundTint="@color/gray_500"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>

</LinearLayout>