<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/auth_background">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Đăng ký tài khoản"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/auth_text_primary"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- USERNAME -->
        <EditText
            android:id="@+id/et_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên người dùng"
            android:padding="10dp"
            android:textColor="@color/auth_text_primary"
            android:textColorHint="@color/auth_text_secondary"
            android:backgroundTint="@color/auth_primary"
            android:layout_marginBottom="16dp"/>

        <!-- EMAIL -->
        <EditText
            android:id="@+id/et_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/auth_text_primary"
            android:textColorHint="@color/auth_text_secondary"
            android:backgroundTint="@color/auth_primary"
            android:layout_marginBottom="16dp"/>

        <!-- PASSWORD -->
        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/auth_text_primary"
            android:textColorHint="@color/auth_text_secondary"
            android:backgroundTint="@color/auth_primary"
            android:layout_marginBottom="16dp"/>

        <!-- CONFIRM PASSWORD -->
        <EditText
            android:id="@+id/et_register_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/auth_text_primary"
            android:textColorHint="@color/auth_text_secondary"
            android:backgroundTint="@color/auth_primary"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐĂNG KÝ"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/auth_primary"/>

        <!-- TRỞ VỀ LOGIN -->
        <TextView
            android:id="@+id/tv_to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản? Đăng nhập"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/auth_primary"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</ScrollView>
