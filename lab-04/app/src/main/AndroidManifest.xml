<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Quyền ghi bộ nhớ (Task03 / Task04 có thể cần) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:label="Lab 04 Storage"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.PersonalTaskManager">

        <!-- ======================================================
             1. MÀN HÌNH KHỞI ĐỘNG — SplashActivity (MAIN/LAUNCHER)
        ======================================================= -->
        <activity
            android:name=".task01.screens.Task01SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ======================================================
             2. MAIN ACTIVITY MỚI — DÙNG CHO 4 BÀI
        ======================================================= -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />

        <!-- ======================================================
             3. TASK 01 — Auth + Profile
        ======================================================= -->
        <activity android:name=".task01.screens.Task01LoginActivity" android:exported="false" />
        <activity android:name=".task01.screens.Task01RegisterActivity" android:exported="false" />
        <activity android:name=".task01.screens.Task01MainActivity" android:exported="false" />
        <activity android:name=".task01.screens.Task01ProfileActivity" android:exported="false" />
        <activity android:name=".task01.screens.Task01AdminActivity" android:exported="false" />

        <!-- ======================================================
             4. TASK 02 — Internal Storage
        ======================================================= -->
        <activity android:name=".task02.ui.main.Task02MainActivity" android:exported="false" />
        <activity android:name=".task02.ui.settings.Task02SettingActivity" android:exported="false" />
        <activity android:name=".task02.ui.settings.Task02Setting2Activity" android:exported="false" />

        <!-- ======================================================
             5. TASK 03 — External Storage + Ghi file
        ======================================================= -->
        <activity android:name=".task03.ui.Task03ContainerActivity" android:exported="false" />

        <!-- ======================================================
             6. TASK 04 — SQLite + Auth + CRUD
        ======================================================= -->
        <activity android:name=".task04.screens.Task04ClassManagerActivity" android:exported="false" />
        <activity android:name=".task04.screens.Task04AuthSelectionActivity" android:exported="false" />
        <activity android:name=".task04.screens.Task04SqliteLoginActivity" android:exported="false" />
        <activity android:name=".task04.screens.Task04SqliteRegisterActivity" android:exported="false" />

    </application>

</manifest>
