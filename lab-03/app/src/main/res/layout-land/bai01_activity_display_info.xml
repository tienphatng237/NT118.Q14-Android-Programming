<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F8FB"
    android:padding="24dp"
    android:fitsSystemWindows="true"
    tools:context=".bai01_SendInformation.DisplayInfoActivity">

    <!-- Cột trái: tiêu đề -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTitle"
            android:text="THÔNG TIN NGƯỜI DÙNG"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />
    </LinearLayout>

    <!-- Cột phải: nội dung -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card_display"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:clipToOutline="true">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_info_field"
                android:padding="12dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Họ tên"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvName"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_info_field"
                android:padding="12dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="CMND"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvCMND"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_info_field"
                android:padding="12dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Bằng cấp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvDegree"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_info_field"
                android:padding="12dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Sở thích"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvHobbies"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_info_field"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Bổ sung"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvExtra"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/btnBack"
                android:text="QUAY LẠI"
                android:textAllCaps="false"
                android:textColor="#1E88E5"
                android:backgroundTint="#E3F2FD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
