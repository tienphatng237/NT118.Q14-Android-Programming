<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_shadow"
    android:padding="12dp"
    android:fitsSystemWindows="true">

    <!-- Tiêu đề -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#1976D2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="MÁY TÍNH CƠ BẢN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"/>
    </androidx.cardview.widget.CardView>

    <!-- Màn hình hiển thị -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvExpression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_input_field"
                android:gravity="end"
                android:minHeight="50dp"
                android:padding="8dp"
                android:textColor="#1A237E"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_field"
                android:gravity="end"
                android:minHeight="60dp"
                android:padding="8dp"
                android:textColor="#0D47A1"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bàn phím -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardDisplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <GridLayout
                android:id="@+id/gridButtons"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="4"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Hàng 1:  %, +/-, ⌫, /  -->
                <Button
                    android:id="@+id/btnPercent"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_columnWeight="1"
                    android:text="%"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:backgroundTint="#BBDEFB"/>
                <Button
                    android:id="@+id/btnNegate"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_columnWeight="1"
                    android:text="+/-"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:backgroundTint="#BBDEFB"/>
                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_columnWeight="1"
                    android:text="⌫"
                    android:textStyle="bold"
                    android:textColor="#0D47A1"
                    android:backgroundTint="#BBDEFB"/>
                <Button
                    android:id="@+id/btnDiv"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_columnWeight="1"
                    android:text="/"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    style="@style/CalcButtonOp"/>

                <!-- Hàng 2: 7 8 9 × -->
                <Button android:id="@+id/btn7" style="@style/CalcButtonNum" android:text="7"/>
                <Button android:id="@+id/btn8" style="@style/CalcButtonNum" android:text="8"/>
                <Button android:id="@+id/btn9" style="@style/CalcButtonNum" android:text="9"/>
                <Button android:id="@+id/btnMul" style="@style/CalcButtonOp"  android:text="×"/>

                <!-- Hàng 3: 4 5 6 - -->
                <Button android:id="@+id/btn4" style="@style/CalcButtonNum" android:text="4"/>
                <Button android:id="@+id/btn5" style="@style/CalcButtonNum" android:text="5"/>
                <Button android:id="@+id/btn6" style="@style/CalcButtonNum" android:text="6"/>
                <Button android:id="@+id/btnSub" style="@style/CalcButtonOp"  android:text="-"/>

                <!-- Hàng 4: 1 2 3 + -->
                <Button android:id="@+id/btn1" style="@style/CalcButtonNum" android:text="1"/>
                <Button android:id="@+id/btn2" style="@style/CalcButtonNum" android:text="2"/>
                <Button android:id="@+id/btn3" style="@style/CalcButtonNum" android:text="3"/>
                <Button android:id="@+id/btnAdd" style="@style/CalcButtonOp"  android:text="+"/>

                <!-- Hàng 5: 0  .  AC  (ô trống để đủ 4 cột) -->
                <Button android:id="@+id/btn0"    style="@style/CalcButtonNum" android:text="0"/>
                <Button android:id="@+id/btnDot"  style="@style/CalcButtonNum" android:text="."/>
                <Button android:id="@+id/btnClear" style="@style/CalcButtonOp"  android:text="AC"/>
                <Button android:id="@+id/btnEqual" style="@style/CalcButtonOp"  android:text="="/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_margin="4dp"
                    android:layout_columnWeight="1"
                    android:background="@android:color/transparent"/>

            </GridLayout>

            <!-- Nút quay lại -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#E3F2FD"
                android:elevation="3dp"
                android:text="←  Quay về màn chính"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
